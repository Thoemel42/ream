---
import "../styles/global.css";

interface Props {
  title?: string;
}

const { title = "Astro + Supabase Starter" } = Astro.props;
---

<!doctype html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;700&family=IBM+Plex+Mono:wght@400;500&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <header class="top-hero relative isolate overflow-hidden border-b border-white/10">
      <div class="top-hero-grid pointer-events-none absolute inset-0"></div>
      <div class="relative z-10 mx-auto w-full max-w-6xl px-4 py-6 sm:px-6 sm:py-8">
        <div class="brand-shell flex items-center justify-between gap-4 rounded-2xl px-4 py-4 sm:px-6 sm:py-5">
          <div class="flex items-center gap-4 sm:gap-5">
            <div class="logo-mark shrink-0" aria-hidden="true">
              <span class="layer-0"></span>
              <span class="layer-1"></span>
              <span class="layer-2"></span>
            </div>
            <div>
              <div class="text-4xl font-bold leading-none tracking-[-0.04em] text-slate-100 sm:text-6xl">ream</div>
              <p class="mt-1 text-xs font-medium tracking-[0.14em] text-blue-100/75 sm:text-sm">
                ressources for teams
              </p>
            </div>
          </div>
          <div class="hidden rounded-xl border border-blue-200/20 bg-slate-950/35 px-3 py-2 text-right md:block">
            <p class="text-xs font-semibold text-blue-100">Modern Team Hub</p>
            <p class="mt-0.5 text-xs text-blue-200/70">Links, notes and structured knowledge</p>
          </div>
        </div>
      </div>
    </header>

    <div class="app-stage-bg relative isolate min-h-[calc(100vh-176px)] overflow-hidden">
      <main class="relative z-10 mx-auto w-full max-w-6xl px-4 py-8 sm:px-6 sm:py-10">
        <slot />
      </main>
    </div>
  </body>
</html>
