---
type Tone = "ok" | "error" | "info";

interface Props {
  tone?: Tone;
  class?: string;
}

const { tone = "info", class: className = "" } = Astro.props;

const toneClasses: Record<Tone, string> = {
  ok: "border-emerald-400/50 bg-emerald-950/70 text-emerald-100",
  error: "border-rose-400/55 bg-rose-950/70 text-rose-100",
  info: "border-blue-300/45 bg-blue-950/55 text-blue-100",
};
---

<p
  class:list={[
    "rounded-xl border px-3 py-2 text-sm font-medium",
    toneClasses[tone],
    className,
  ]}
>
  <slot />
</p>
