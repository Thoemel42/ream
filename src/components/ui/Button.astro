---
type Variant = "primary" | "danger" | "ghost";

interface Props extends astroHTML.JSX.ButtonHTMLAttributes {
  variant?: Variant;
  class?: string;
}

const { variant = "primary", class: className = "", ...rest } = Astro.props;

const variantClasses: Record<Variant, string> = {
  primary:
    "border border-blue-400/70 bg-gradient-to-b from-blue-500 to-blue-700 text-white hover:brightness-110",
  danger:
    "border border-rose-400/70 bg-gradient-to-b from-rose-500 to-rose-700 text-white hover:brightness-110",
  ghost:
    "border border-blue-200/25 bg-slate-900/30 text-blue-100 hover:border-blue-200/45 hover:bg-slate-900/65",
};
---

<button
  {...rest}
  class:list={[
    "inline-flex w-fit items-center justify-center rounded-xl px-4 py-2 text-sm font-semibold transition disabled:cursor-not-allowed disabled:opacity-60",
    variantClasses[variant],
    className,
  ]}
>
  <slot />
</button>
